      const rect = this.getBoundingClientRect()
      const x = e.clientX - rect.left
      const y = e.clientY - rect.top
      rippleDiv.style.left = `${x / 2}px`
      rippleDiv.style.top = `${y / 2}px`
      this.appendChild(rippleDiv)
      console.log('ğŸš€ ~ this:', this)
      setTimeout(() => {
        rippleDiv.remove()
