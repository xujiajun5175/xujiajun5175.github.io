<style is:global>
  .ripple {
    position: absolute;
    width: 200px;
    height: 200px;
    background-color: rgba(0, 0, 0);
    border-radius: 50%;
    transform: scale(0);
    animation: rippleEffect 0.5s ease-out;
  }

  @keyframes rippleEffect {
    to {
      transform: scale(2);
      opacity: 0;
    }
  }
</style>

